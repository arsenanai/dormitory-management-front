{
  "name": "dorm-admin-front",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite --host --port 3000 --strictPort",
    "build": "NODE_ENV=production vite build",
    "preview": "vite preview",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage",
    "test:e2e": "dotenv -e .env.testing -- playwright test --retries=0 --reporter=list",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:all": "npm run test:unit && npm run test:e2e",
    "lint": "eslint . --fix",
    "lint:check": "eslint .",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/",
    "type-check": "tsc --noEmit",
    "quality": "npm run lint:check && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint && npm run format",
    "pre-commit": "npm run quality && npm run test:unit",
    "scan:i18n": "tsx scan-i18n.ts"
  },
  "devDependencies": {
    "@babel/parser": "^7.28.5",
    "@babel/traverse": "^7.28.5",
    "@pinia/testing": "^1.0.2",
    "@playwright/test": "^1.40.0",
    "@types/node": "^24.0.10",
    "@typescript-eslint/eslint-plugin": "^8.50.1",
    "@typescript-eslint/parser": "^8.50.1",
    "@vitest/coverage-v8": "^3.2.4",
    "@vue/test-utils": "^2.4.6",
    "autoprefixer": "^10.4.20",
    "chalk": "^5.6.2",
    "dotenv-cli": "^9.0.0",
    "eslint": "^9.39.2",
    "eslint-plugin-vue": "^10.6.2",
    "fast-glob": "^3.3.3",
    "jsdom": "^26.1.0",
    "prettier": "^3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "tsx": "^4.16.2",
    "typescript": "^5.8.3",
    "vitest": "^3.0.5",
    "vue-router-mock": "^1.1.0"
  },
  "dependencies": {
    "@chenfengyuan/vue-qrcode": "^2.0.0",
    "@heroicons/vue": "^2.2.0",
    "@tailwindcss/vite": "^4.0.14",
    "@vitejs/plugin-vue": "^5.2.1",
    "axios": "^1.9.0",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "express": "^5.1.0",
    "flowbite": "^3.1.2",
    "konva": "^9.3.20",
    "pinia": "^3.0.1",
    "tailwindcss": "^4.0.14",
    "uuid": "^11.1.0",
    "vite": "^6.1.0",
    "vite-plugin-vue-devtools": "^7.7.2",
    "vue": "^3.5.13",
    "vue-i18n": "^11.1.1",
    "vue-konva": "^3.2.1",
    "vue-router": "^4.5.0",
    "vue-the-mask": "^0.11.1"
  }
}